<h1>Listing pledges</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Small Group</th>
      <th>Kills (Week)</th>
      <th>Dead? (Week)</th>
      <th>Kills (Total)</th>
      <th>Deaths (Total)</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @pledges.each do |pledge| %>
      <tr>
        <td><%= pledge.name %></td>
        <td><%= pledge.smallGroup %></td>
        <td><%= pledge.killsWeek %></td>
        <td><%= pledge.diedWeek %></td>
        <td><%= pledge.killsTotal %></td>
        <td><%= pledge.deathsTotal %></td>
        <td><%= link_to 'Show', pledge %></td>
        <td><%= link_to 'Edit', edit_pledge_path(pledge) %></td>
        <td><%= link_to 'Destroy', pledge, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

